<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/map"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:name="com.google.android.gms.maps.SupportMapFragment"
              android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>

    <ListView
            android:id="@+id/list_view"
            android:layout_width="fill_parent"
            android:layout_height="280dp"
            android:layout_weight="1"
            android:drawSelectorOnTop="true"/>

    <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:id="@+id/downList" android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"     android:layout_marginTop="360dp"
            android:src="@drawable/ic_down" android:background="@color/blue"
            android:layout_marginLeft="40dp" android:layout_marginRight="40dp"/>
    <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:id="@+id/upList" android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"     android:layout_marginTop="360dp"
            android:src="@drawable/ic_up"
            android:background="#083cff" android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"/>



    <ProgressBar
            android:id="@+id/recommendation_progress_bar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/android:list"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="103dp"
            android:visibility="visible" />

</RelativeLayout>